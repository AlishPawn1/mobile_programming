<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userListItemRoot"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    >

    <TextView
        android:id="@+id/userListItemId"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/userListItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/userListItemId"
        android:text="@string/yourName"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/userListItemAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userListItemName"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/userListItemId"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/yourAddress"
        android:textColor="@color/gray"
        android:textSize="18sp"/>

</RelativeLayout>